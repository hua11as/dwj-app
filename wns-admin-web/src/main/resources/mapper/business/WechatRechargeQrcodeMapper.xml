<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lontyu.dwjadmin.dao.WechatRechargeQrcodeMapper" >
  <resultMap id="BaseResultMap" type="com.lontyu.dwjadmin.entity.WechatRechargeQrcode" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="qr_code" property="qrCode" jdbcType="VARCHAR" />
    <result column="amount" property="amount" jdbcType="INTEGER" />
    <result column="real_amount" property="realAmount" jdbcType="DECIMAL" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="bind_user_id" property="bindUserId" jdbcType="INTEGER" />
    <result column="bind_time" property="bindTime" jdbcType="TIMESTAMP" />
    <result column="del_flag" property="delFlag" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, qr_code, amount, real_amount, status, bind_user_id, bind_time, del_flag, create_time,
    update_time
  </sql>
  <update id="deleteByIds">
    update t_wechat_recharge_qrcode set del_flag = 1
    where id in
    <foreach collection="ids" separator="," open="(" close=")" item="id">
      #{id}
    </foreach>
    and status = 0
  </update>
  <update id="deleteAllValid">
    update t_wechat_recharge_qrcode set del_flag = 1 where del_flag = 0
  </update>
  <select id="selectUsedQrcodeForUpdate" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from t_wechat_recharge_qrcode where `status` = 1 for update
  </select>
  <select id="selectByRealAmountForUpdate" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from t_wechat_recharge_qrcode where real_amount = #{realAmount} and del_flag = 0
  </select>
  <select id="selectByIdsForUpdate" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from t_wechat_recharge_qrcode
    where id in
    <foreach collection="ids" separator="," open="(" close=")" item="id">
      #{id}
    </foreach>
    for update
  </select>
  <select id="selectValidForUpdate" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from t_wechat_recharge_qrcode
    where del_flag = 0 for update
  </select>
</mapper>